<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    Tools:context=".view.fragments.FragmentUsersAdd">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/Button_Add_Users"
        Tools:listitem="@layout/custom_listview_fragment_users" />

    <Button
        android:id="@+id/Button_Add_Users"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:elevation="20dp"
        android:outlineProvider="background"
        android:stateListAnimator="@null"
        android:text="Add Players"
        android:textColor="@color/colorAccentE"
        app:cornerRadius="10dp" />

</RelativeLayout>