<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp">



        <LinearLayout
            android:id="@+id/layout_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/background_layout"
            android:clipToPadding="false"
            android:elevation="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:outlineProvider="background"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/b_titr"
                android:text="دما"
                android:textColor="@android:color/white"
                android:textSize="19.5sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:id="@+id/Progress_Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Text_Temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/b_titr"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

                <ProgressBar
                    android:id="@+id/ProgressID"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/custom_progress_bar" />
            </RelativeLayout>

            <Button
                android:id="@+id/reset_button_id"
                style="@style/Buttons_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/button_background"
                android:elevation="20dp"
                android:fontFamily="@font/b_titr"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="دوباره" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/Holder_Chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/layout_temp"
            android:layout_margin="10dp"
            android:background="@drawable/background_layout"
            android:clipToPadding="false"
            android:elevation="40dp"
            android:outlineProvider="paddedBounds"
            android:padding="10dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:padding="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Holder_Chart"
            android:layout_centerHorizontal="true"
            android:clipToPadding="false"
            android:layoutMode="opticalBounds"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_add_record_char"
                style="@style/Buttons_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="20dp"
                android:fontFamily="@font/b_titr"
                android:outlineProvider="background"
                android:stateListAnimator="@null"
                android:text="جدید" />

            <Button
                android:id="@+id/button_clear"
                style="@style/Buttons_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="20dp"
                android:fontFamily="@font/b_titr"
                android:outlineProvider="background"
                android:stateListAnimator="@null"
                android:text="پاک" />
            <Button
                android:id="@+id/Stop_Button"
                style="@style/Buttons_Style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:elevation="20dp"
                android:fontFamily="@font/b_titr"
                android:outlineProvider="background"
                android:stateListAnimator="@null"
                android:text="استوپ" />
        </LinearLayout>
    </RelativeLayout>